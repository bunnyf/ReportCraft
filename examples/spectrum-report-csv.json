{
  "reportType": "spectrum-report",
  "outputPath": "./output/waveform_spectrum_report_csv.xlsx",
  "outputFormat": "xlsx",
  "parameters": {
    "title": "设备振动波形频谱分析报告",
    "reportDate": "2025-03-19",
    "description": "本报告包含了设备振动波形和频谱的分析数据",
    "metadata": {
      "author": "ReportCraft",
      "company": "设备诊断中心",
      "department": "设备健康管理部"
    },
    "deviceInfo": {
      "deviceName": "离心泵",
      "deviceId": "CP-101",
      "location": "1号车间",
      "measurementPoint": "电机非驱动端",
      "sampleFrequency": 10240,
      "sampleTime": "2025-02-13 15:10:36"
    },
    "waveformConfig": {
      "title": "时域波形数据",
      "xLabel": "时间(s)",
      "yLabel": "加速度(m/s²)",
      "chartStyle": {
        "lineColor": "#1E90FF",
        "lineWidth": 1.5,
        "gridLines": true,
        "axis": {
          "xMin": 0,
          "xMax": 1.0,
          "yMin": -0.5,
          "yMax": 0.5
        },
        "markers": {
          "show": true,
          "size": 3,
          "color": "#0000FF",
          "shape": "circle"
        },
        "grid": {
          "show": true,
          "color": "#CCCCCC",
          "lineStyle": "dashed",
          "lineWidth": 0.5
        },
        "labels": {
          "title": {
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "axis": {
            "fontSize": 12,
            "color": "#666666"
          }
        },
        "legend": {
          "position": "top",
          "fontSize": 11,
          "color": "#333333"
        }
      }
    },
    "spectrumConfig": {
      "title": "频谱分析数据",
      "xLabel": "频率(Hz)",
      "yLabel": "幅值(m/s²)",
      "chartStyle": {
        "barColor": "#FF4500",
        "gridLines": true,
        "axis": {
          "xMin": 0,
          "xMax": 5000,
          "yMin": 0,
          "yMax": 0.3
        },
        "grid": {
          "show": true,
          "color": "#CCCCCC",
          "lineStyle": "solid",
          "lineWidth": 0.5,
          "minorGrid": {
            "show": true,
            "color": "#EEEEEE",
            "lineStyle": "dotted",
            "lineWidth": 0.25
          }
        },
        "highlight": {
          "regions": [
            {
              "xStart": 1000,
              "xEnd": 1500,
              "color": "rgba(255, 100, 100, 0.2)",
              "label": "特征频率区域"
            }
          ]
        },
        "labels": {
          "title": {
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "axis": {
            "fontSize": 12,
            "color": "#666666"
          }
        },
        "legend": {
          "position": "right",
          "fontSize": 11,
          "color": "#333333"
        }
      }
    },
    "tablesConfig": [
      {
        "title": "波形特征参数",
        "columns": [
          {"field": "parameter", "header": "参数名称", "width": 25},
          {"field": "value", "header": "数值", "width": 15},
          {"field": "unit", "header": "单位", "width": 15}
        ],
        "headerStyle": {
          "bold": true,
          "background": "#DDEBF7",
          "color": "#000000"
        }
      },
      {
        "title": "频谱特征参数",
        "columns": [
          {"field": "parameter", "header": "参数名称", "width": 25},
          {"field": "value", "header": "数值", "width": 15},
          {"field": "unit", "header": "单位", "width": 15},
          {"field": "description", "header": "说明", "width": 30}
        ],
        "headerStyle": {
          "bold": true,
          "background": "#FFEBF7",
          "color": "#000000"
        }
      }
    ]
  },
  "dataSources": [
    {
      "id": "waveformData",
      "type": "csv",
      "config": {
        "file": "./examples/data/spectrum_data.csv",
        "timeColumn": "time",
        "valueColumn": "acceleration"
      }
    },
    {
      "id": "spectrumData",
      "type": "csv",
      "config": {
        "file": "./examples/data/spectrum_data.csv",
        "xColumn": "frequency",
        "yColumn": "amplitude"
      }
    },
    {
      "id": "waveformParameters",
      "type": "csv",
      "config": {
        "file": "./examples/data/spectrum_parameters.csv",
        "filter": "type='waveform'"
      }
    },
    {
      "id": "spectrumParameters",
      "type": "csv",
      "config": {
        "file": "./examples/data/spectrum_parameters.csv",
        "filter": "type='spectrum'"
      }
    }
  ]
}
