{
  "reportType": "SpectrumReport",
  "outputPath": "reports/spectrum-analysis-csv.html",
  "template": "templates/spectrum.html",
  "outputFormat": "html",
  "parameters": {
    "title": "Vibration Analysis Report",
    "deviceInfo": {
      "deviceName": "Pump XYZ-123",
      "deviceId": "PMP-2023-01-456",
      "location": "Building A, Room 302",
      "measurementPoint": "Drive End Bearing"
    },
    "waveformConfig": {
      "title": "Time Domain Waveform",
      "xLabel": "Time (s)",
      "yLabel": "Amplitude (g)",
      "chartType": "line",
      "chartStyle": {
        "lineColor": "#1E90FF",
        "lineWidth": 1.5,
        "gridLines": true,
        "axis": {
          "xMin": 0,
          "xMax": 1.0,
          "yMin": -0.5,
          "yMax": 0.5
        },
        "markers": {
          "show": true,
          "size": 4,
          "color": "#FF4500",
          "shape": "circle"
        },
        "grid": {
          "show": true,
          "color": "#CCCCCC",
          "lineStyle": "solid",
          "lineWidth": 0.5,
          "minorGrid": {
            "show": true,
            "color": "#EEEEEE",
            "lineStyle": "dotted",
            "lineWidth": 0.25
          }
        },
        "highlight": {
          "regions": [
            {
              "xStart": 0.4,
              "xEnd": 0.6,
              "color": "rgba(255, 100, 100, 0.2)",
              "label": "Impact Event"
            }
          ]
        },
        "labels": {
          "title": {
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "#333333"
          },
          "axis": {
            "fontSize": 12,
            "color": "#666666"
          }
        },
        "legend": {
          "position": "bottom",
          "fontSize": 11,
          "color": "#333333"
        }
      }
    },
    "spectrumConfig": {
      "title": "Frequency Spectrum",
      "xLabel": "Frequency (Hz)",
      "yLabel": "Amplitude (g)",
      "chartType": "bar",
      "chartStyle": {
        "lineColor": "#32CD32",
        "lineWidth": 1.0,
        "gridLines": true,
        "axis": {
          "xMin": 0,
          "xMax": 1000,
          "yMin": 0,
          "yMax": 0.1
        },
        "markers": {
          "show": false
        },
        "grid": {
          "show": true,
          "color": "#CCCCCC",
          "lineStyle": "solid",
          "lineWidth": 0.5
        },
        "highlight": {
          "regions": [
            {
              "xStart": 180,
              "xEnd": 220,
              "color": "rgba(255, 200, 100, 0.2)",
              "label": "Bearing Fault Frequency"
            }
          ]
        }
      }
    },
    "additionalCharts": [
      {
        "title": "Vibration Intensity Heat Map",
        "xLabel": "Frequency (Hz)",
        "yLabel": "Time (s)",
        "chartType": "heatmap",
        "chartStyle": {
          "heatmap": {
            "colorScale": "viridis",
            "showColorBar": true,
            "interpolate": true
          },
          "axis": {
            "xMin": 0,
            "xMax": 1000,
            "yMin": 0,
            "yMax": 10
          },
          "labels": {
            "title": {
              "fontSize": 14,
              "fontWeight": "bold",
              "color": "#333333"
            }
          }
        },
        "dataSourceId": "heatmapData"
      },
      {
        "title": "3D Vibration Surface Plot",
        "xLabel": "Frequency (Hz)",
        "yLabel": "Time (s)",
        "zLabel": "Amplitude (g)",
        "chartType": "3dsurface",
        "chartStyle": {
          "3dsurface": {
            "wireframe": true,
            "colorScale": "jet",
            "rotation": {
              "x": 30,
              "y": 45,
              "z": 0
            }
          },
          "axis": {
            "xMin": 0,
            "xMax": 1000,
            "yMin": 0,
            "yMax": 10,
            "zMin": 0,
            "zMax": 0.1
          }
        },
        "dataSourceId": "surfaceData"
      },
      {
        "title": "Frequency Spectrum Waterfall Plot",
        "xLabel": "Frequency (Hz)",
        "yLabel": "Measurement Time",
        "zLabel": "Amplitude (g)",
        "chartType": "waterfall",
        "chartStyle": {
          "waterfall": {
            "baseColor": "#1E90FF",
            "colorGradient": true,
            "spacing": 0.1,
            "perspective": 30
          },
          "axis": {
            "xMin": 0,
            "xMax": 1000,
            "yMin": 0,
            "yMax": 5,
            "zMin": 0,
            "zMax": 0.1
          }
        },
        "dataSourceId": "waterfallData"
      }
    ]
  },
  "dataSources": [
    {
      "id": "waveformData",
      "type": "csv",
      "config": {
        "filePath": "data/waveform.csv",
        "xColumn": "time",
        "yColumn": "amplitude"
      }
    },
    {
      "id": "spectrumData",
      "type": "csv",
      "config": {
        "filePath": "data/spectrum.csv",
        "xColumn": "frequency",
        "yColumn": "amplitude"
      }
    },
    {
      "id": "heatmapData",
      "type": "csv",
      "config": {
        "filePath": "data/heatmap.csv",
        "xColumn": "frequency",
        "yColumn": "time",
        "zColumn": "amplitude"
      }
    },
    {
      "id": "surfaceData",
      "type": "csv",
      "config": {
        "filePath": "data/surface.csv",
        "xColumn": "frequency",
        "yColumn": "time",
        "zColumn": "amplitude"
      }
    },
    {
      "id": "waterfallData",
      "type": "csv",
      "config": {
        "filePath": "data/waterfall.csv",
        "xColumn": "frequency",
        "yColumn": "time",
        "zColumn": "amplitude"
      }
    }
  ]
}
